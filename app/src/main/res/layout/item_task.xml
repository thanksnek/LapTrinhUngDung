<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/itemTextViewTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tiêu đề"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="15dp"
        android:textSize="18dp"
     />
    <TextView
        android:id="@+id/itemTextViewTrangThai"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Đang làm"
        app:layout_constraintTop_toBottomOf="@id/itemTextViewTitle"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="15dp"
        />
    <TextView
        android:id="@+id/itemTextViewDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ngày hết hạn"
        android:textStyle="italic"
        app:layout_constraintTop_toBottomOf="@id/itemTextViewTrangThai"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="15dp"
        tools:layout_editor_absoluteX="4dp"
        tools:layout_editor_absoluteY="49dp" />
    <TextView
        android:id="@+id/itemEditTextDate"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        app:layout_constraintBaseline_toBaselineOf="@id/itemTextViewDate"
        app:layout_constraintStart_toEndOf="@id/itemTextViewDate"
        android:layout_marginStart="10dp"
        android:ems="10"
        android:hint="00/00/00000"
        />

    <Button
        android:id="@+id/buttonDelete"
        android:layout_width="80dp"
        android:layout_height="48dp"
        android:drawableLeft="@drawable/delete_black_24dp"
        android:text="Xóa"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="10dp"
        app:layout_constraintTop_toTopOf="@id/itemTextViewTitle"
        android:layout_marginTop="5dp"
        tools:layout_editor_absoluteX="316dp"
        tools:layout_editor_absoluteY="12dp" />


</androidx.constraintlayout.widget.ConstraintLayout>